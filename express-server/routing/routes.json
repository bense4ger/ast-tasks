{
    "routes" : [
        {
            "method": "get",
            "pattern": "/thing/:id",
            "handler": "getHandler"
        },
        {
            "method": "post",
            "pattern": "/thing",
            "handler": "postHandler"
        },
        {
            "method": "put",
            "pattern": "/thing/:id",
            "handler": "createHandler"
        }, 
        {
            "method": "patch",
            "pattern": "/thing/:id",
            "handler": "updateHandler"
        },
        {
            "method": "get",
            "pattern": "/error",
            "handler": "errorHandler"
        },
        {
            "method": "get",
            "pattern": "/mongothing/:id",
            "handler": "mongoGet"
        },
        {
            "method": "post",
            "pattern": "/mongothing",
            "handler": "mongoInsert"
        },
        {
            "method": "delete",
            "pattern": "/mongothing/:id",
            "handler": "mongoDelete"
        },
        {
            "method": "get",
            "pattern": "/os",
            "handler": "osInfoHandler"
        },
        {
            "method": "get",
            "pattern": "/async/:type",
            "handler": "asyncHandler"
        }
